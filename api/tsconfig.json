{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "lib": ["ES2022"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "types": ["node", "@vercel/node"],
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "@prisma/client": ["../backend/node_modules/@prisma/client"],
      "@prisma/client/*": ["../backend/node_modules/@prisma/client/*"]
    }
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules"]
}
